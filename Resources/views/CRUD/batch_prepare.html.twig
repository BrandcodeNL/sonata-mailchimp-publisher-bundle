<p>
    <b>Mailchimp</b><br>
    {{'batch.mailchimp.info' |trans({}, 'BrandcodeNLSonataMailchimpPublisherBundle')}}    
</p>

<div class="form-group">
    <label for="exampleSelect1">{{'batch.mailchimp.select_list' |trans({}, 'BrandcodeNLSonataMailchimpPublisherBundle')}}</label>
    <select class="form-control" id="mc_listSelect" name="mailchimp[list]">
        {% for list in lists %}
            <option value="{{list.id}}">{{list}}</option>
        {% endfor %}  
    </select>
</div>

<div class="form-group">
    <label for="exampleSelect1">{{'batch.mailchimp.select_template' |trans({}, 'BrandcodeNLSonataMailchimpPublisherBundle')}}</label>
    <select class="form-control" id="mc_templateSelect" name="mailchimp[template]">
        {% for template in templates %}
            <option value="{{template.id}}">{{template}}</option>
        {% endfor %}  
    </select>
</div>

<div class="form-group">
    <label for="mailchimp[subject]">{{'batch.mailchimp.subject' |trans({}, 'BrandcodeNLSonataMailchimpPublisherBundle')}}</label>
    <input type="text" class="form-control" id="mc_subject" name="mailchimp[subject]" >
</div>

<div class="form-group">
    <label for="mailchimp[from]">{{'batch.mailchimp.from' |trans({}, 'BrandcodeNLSonataMailchimpPublisherBundle')}}</label>
    <input type="text" class="form-control" id="mc_from" name="mailchimp[from]" >
</div>

